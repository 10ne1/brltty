import java.util.Arrays;
import java.util.ArrayList;

public class MainProgram {
  public static void putMessage (String format, Object... arguments) {
    System.err.println(String.format(format, arguments));
  }

  public static void syntaxError (String format, Object... arguments) {
    putMessage(format, arguments);
    System.exit(2);
  }

  public static void tooManyOperands () {
    syntaxError("too many operands");
  }

  public static void noMoreOperands (ArrayList<String> operands) {
    if (!operands.isEmpty()) tooManyOperands();
  }

  public static String getJavaPath () {
    return ProcessHandle
      .current()
      .info()
      .command()
      .orElseThrow();
  }

  public static void main (String[] arguments) {
    ArrayList<String> operands = new ArrayList<>(Arrays.asList(arguments));
    if (operands.isEmpty()) syntaxError("action not specified");
    String action = operands.remove(0);

    switch (action) {
      case "jvmpath": {
        noMoreOperands(operands);
        System.out.println(getJavaPath());
        break;
      }

      default: {
        syntaxError("unknown action: %s", action);
      }
    }
  }
}
