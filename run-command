###############################################################################

rootDirectory=`dirname "${0}"`
rootDirectory=`realpath "${rootDirectory}"`

[ -z "${LD_LIBRARY_PATH}" ] || LD_LIBRARY_PATH=":${LD_LIBRARY_PATH}"
LD_LIBRARY_PATH="${rootDirectory}/Programs${LD_LIBRARY_PATH}"
export LD_LIBRARY_PATH

exec "${@}"
exit "${?}"
