SYSTEMD_UNIT_DIRECTORY = $(INSTALL_ROOT)/usr/lib/systemd/system
SYSTEMD_SCRIPT_DIRECTORY = $(INSTALL_ROOT)$(sbindir)

install: install-units install-scripts

install-unit-directory:
	$(INSTALL_DIRECTORY) $(SYSTEMD_UNIT_DIRECTORY)

install-units: install-unit-directory
	$(INSTALL_DATA) $(SRC_DIR)/brltty.service $(SYSTEMD_UNIT_DIRECTORY)
	$(INSTALL_DATA) $(BLD_DIR)/brltty@.service $(SYSTEMD_UNIT_DIRECTORY)

install-script-directory:
	$(INSTALL_DIRECTORY) $(SYSTEMD_SCRIPT_DIRECTORY)

install-scripts: install-script-directory
	$(INSTALL_SCRIPT) $(SRC_DIR)/brltty-systemd-wrapper $(SYSTEMD_SCRIPT_DIRECTORY)

uninstall:
	-rm -f $(SYSTEMD_UNIT_DIRECTORY)/brltty.*
	-rm -f $(SYSTEMD_UNIT_DIRECTORY)/brltty@.*
	-rm -f $(SYSTEMD_SCRIPT_DIRECTORY)/brltty-systemd-*

