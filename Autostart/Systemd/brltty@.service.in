[Unit]

Description=Braille Device: %I
Documentation=man:brltty(1)
Documentation=@PACKAGE_URL@

DefaultDependencies=no
StopWhenUnneeded=true

RequiresMountsFor=@UPDATABLE_DIRECTORY@


[Service]

Type=forking
PIDFile=/run/brltty-%i.pid
ExecStart=/bin/sh -c 'device="%I" /bin/brltty -E -d "${device#DEFAULT}" -P "/run/brltty-%I.pid"'

#Type=notify
#ExecStart=/bin/sh -c 'device="%I" /bin/brltty -E -d "${device#DEFAULT}" -n'

TimeoutStartSec=5
TimeoutStopSec=10

Restart=always
RestartSec=30

Nice=-10
OOMScoreAdjust=-900

ProtectHome=read-only
ProtectSystem=full


