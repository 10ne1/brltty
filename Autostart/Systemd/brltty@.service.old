[Unit]

Description=Braille Device Support
Documentation=man:brltty(1)
Documentation=http://mielke.cc/brltty/

DefaultDependencies=no
StopWhenUnneeded=true


[Service]

Type=forking
PIDFile=/run/brltty-%i.pid
ExecStart=/bin/sh -c 'device="%I" /bin/brltty -E -P /run/brltty-%I.pid -d "${device#DEFAULT}"'

TimeoutStartSec=5
TimeoutStopSec=10

Restart=always
RestartSec=30

Nice=-10
OOMScoreAdjust=-900

ProtectHome=read-only
ProtectSystem=full


