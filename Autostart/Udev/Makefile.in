UDEV_RULES_SEQUENCE = 90
UDEV_RULES_TYPE = all
#UDEV_RULES_TYPE = nogeneric

UDEV_RULES_DIRECTORY = $(INSTALL_ROOT)/etc/udev/rules.d
UDEV_PROGRAMS_DIRECTORY = $(INSTALL_ROOT)/usr/lib/udev

UDEV_RULES_EXTENSION = rules
UDEV_RULES_FILE = $(UDEV_RULES_SEQUENCE)-$(PACKAGE_TARNAME).$(UDEV_RULES_EXTENSION)

install: install-rules install-programs

install-rules-directory:
	$(INSTALL_DIRECTORY) $(UDEV_RULES_DIRECTORY)

install-rules-all: install-rules-directory
	$(INSTALL_DATA) $(SRC_DIR)/rules $(UDEV_RULES_DIRECTORY)/$(UDEV_RULES_FILE)

install-rules-nogeneric: install-rules-all
	$(SRC_TOP)updusbdevs -quiet -nogeneric udev:$(UDEV_RULES_DIRECTORY)/$(UDEV_RULES_FILE)

install-rules: install-rules-$(UDEV_RULES_TYPE)

install-programs-directory:
	$(INSTALL_DIRECTORY) $(UDEV_PROGRAMS_DIRECTORY)

install-programs: install-programs-directory
	$(INSTALL_SCRIPT) $(SRC_DIR)/$(PACKAGE_TARNAME)-wrapper $(UDEV_PROGRAMS_DIRECTORY)

uninstall:
	-rm -f $(UDEV_RULES_DIRECTORY)/?*-$(PACKAGE_TARNAME).$(UDEV_RULES_EXTENSION)
	-rm -f $(UDEV_PROGRAMS_DIRECTORY)/$(PACKAGE_TARNAME)-*

